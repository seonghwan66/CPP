------------1번-------------
#include <iostream>
using namespace std;

class A { public: int x = 1; };
				class B : public A { public: int y = 2; };
				class C : private A { public: int z = 3; };
				class D : protected B { public: int w = 4; };
int main() {
	A a; B b; C c; D d;
	cout << a.x; // ①
	cout << b.x; // ②
	cout << b.y; // ③
	cout << c.x; // ④
	cout << c.z; // ⑤
	cout << d.x; // ⑥
	cout << d.y; // ⑦
	cout << d.w; // ⑧
}
------------2번-------------
#include <iostream>
using namespace std;

class A {
	int x;
public: void setX(int x) { this->x = x; }
};

class B : protected A {
	int y;
public: void setXY(int x, int y) { setX(x); this->y = y; }
};

int main() {
	A a; B b;
	a.x = 3; // ①
	b.y = 5; // ②
	a.setX(3); // ③
	b.setX(3); // ④
	b.setXY(3, 5); // ⑤
}
------------4번-------------
#include <iostream>
using namespace std;

class Adder {
protected:
	int add(int a, int b) {
		return a + b;
	}
};
class Subtractor {
protected:
	int minus(int a, int b) {
		return a - b;
	}
};
class Calculator : public Adder, public Subtractor {
public:
	int calc(int a, char op, int b) {
		int res = 0;

		if (op == '+') res = add(a, b);
		else if (op == '-') res = minus(a, b);

		return res;
	}
};
int main() {
	int a, b;
	char op;
	Calculator calcurator;

	while (1) {
		cout << "수식을 입력하세요. (정수+정수 혹은 정수-정수)" << endl;
		cin >> a >> op >> b;
		if (a == 99 && b == 99) break;
		cout << calculator.calc(a, op, b) << endl;
	}
	cout << "계산을 종료합니다." << endl;
}


------------상속-------------
#include <iostream>
using namespace std;

class A {
public:
    double calculateVolume(double radius) {
        return (4.0 / 3.0) * 3.141592 * radius * radius * radius;
    }
};

class B : public A {
public:
    double calculateCircumference(double radius) {
        return 2.0 * 3.141592 * radius;
    }
};

int main() {
    B b;
    double radius;

    cout << "반지름 입력: ";
    cin >> radius;

    double volume = b.calculateVolume(radius);
    double circumference = b.calculateCircumference(radius);

    cout << "구의 부피는 " << volume << " 입니다." << endl;
    cout << "원의 둘레는 " << circumference << " 입니다." << endl;

    return 0;
}


------------난수-------------
#include <iostream>
#include <windows.h>
#include <random>
using namespace std;

void move_cur(int x, int y) {
    printf("\033[%d;%dH*", y, x);
}
int main() {
    
    random_device dv;
    mt19937 gen(dv());
    uniform_int_distribution<> dis(0, 65);
    uniform_int_distribution<> dit(0, 25);

    for (int i = 0; i < 200; i++) {
        move_cur(dis(gen), dit(gen));
        Sleep(100);
    }

    getchar();

    return 0;
}

